# bsp, stack, float
yabai -m config layout bsp

yabai -m config window_placement second_child

# Padding 
yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 2

# Mouse
yabai -m config mouse_follows_focus on 

yabai -m config mouse_modifier alt
# Left click + drag
yabai -m config mouse_action1 move
# Right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

# Disable
yabai -m rule --add="^com.apple.systemprefences$" manage=off
yabai -m rule --add="^Calculator$" manage=off
yabai -m rule --add="^Karabiner-Elements$" manage=off
yabai -m rule --add="^Iterm2$" space=^2

yabai -m config external_bar all:0:36
