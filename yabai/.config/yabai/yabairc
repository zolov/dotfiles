# bsp, stack, float
yabai -m config layout bsp

yabai -m config window_placement second_child

# Padding 
yabai -m config top_padding 15 
yabai -m config bottom_padding 15
yabai -m config left_padding 15
yabai -m config right_padding 15
yabai -m config window_gap 15

# Mouse
yabai -m config mouse_follows_focus on 

yabai -m config mouse_modifier alt
# Left click + drag
yabai -m config mouse_action1 move
# Right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

# Enable
# yabai -m rule --add app!="^(Safari|Finder|Notes)$" manage=off 

# Disable
yabai -m rule --add="^qView" manage=off
yabai -m rule --add="^intellij" manage=off
yabai -m rule --add="^goland" manage=off
yabai -m rule --add="^com.spotify.client" manage=off
yabai -m rule --add="^com.apple.finder" manage=off
yabai -m rule --add="^com.cisco.anyconnect.gui" manage=off
yabai -m rule --add="^com.apple.systemprefences" manage=off
yabai -m rule --add="^Calculator" manage=off
yabai -m rule --add="^Karabiner-Elements" manage=off
yabai -m rule --add="^WezTerm$" space=^1

yabai -m config external_bar all:25:0

# borders active_color=0xff494d84 inactive_color=0xff414550 width=12.0 &
